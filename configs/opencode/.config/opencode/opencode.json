{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "lsp": {
    "shopify-theme": {
      "command": ["shopify", "theme", "language-server"],
      "extensions": [".liquid"]
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "shopify-dev": {
      "type": "local",
      "command": ["pnpx", "@shopify/dev-mcp@latest"],
      "environment": {
        "LIQUID_VALIDATION_MODE": "full",
        "OPT_OUT_INSTRUMENTATION": "true"
      }
    }
  },
  "model": "openai/gpt-5.1-codex-max",
  "provider": {
    "openai": {
      "models": {
        "gpt-5.1-codex-max": {
          "options": {
            "reasoningEffort": "xhigh",
            "reasoningSummary": "auto"
          }
        }
      }
    }
  },
  "theme": "system",
  "tools": {
    "context7": true,
    "shopify-dev": true
  }
}
